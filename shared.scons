Import('*')

# Build Cal3D tests.

skipdebug = ARGUMENTS.get('skipdebug', '')
skiprelease = ARGUMENTS.get('skiprelease', '')

if not skipdebug:
    env = baseEnv.Clone(tools=[Debug])
    Export('env')
    SConscript('build.scons', build_dir='Debug', duplicate=0)

if not skiprelease:
    env = baseEnv.Clone(tools=[Release])
    Export('env')
    SConscript('build.scons', build_dir='Release', duplicate=0)
